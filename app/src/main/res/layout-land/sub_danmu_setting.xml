<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_iv_danmu_setting"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="@string/danmu_control"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/danmu_filter_by_pos"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_vv_filter_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_danmu_position_block_top_white_24dp"
                android:text="@string/danmu_top" />

            <ImageView
                android:id="@+id/iv_vv_filter_flow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_danmu_poisition_block_center_white_24dp"
                android:text="@string/danmu_flow" />


            <ImageView
                android:id="@+id/iv_vv_filter_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_danmu_poisition_block_bottom_white_24dp"
                android:text="@string/danmu_bottom" />

            <ImageView
                android:id="@+id/iv_vv_filter_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_danmu_poisition_block_colors_24dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/danmu_text_scale"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/sb_text_scale"
            style="?android:attr/android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="20dp"
            android:max="100"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/danmu_destiny"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/sb_danmu_destiny"
            style="?android:attr/horizontalSpacing"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/danmu_speed"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/sb_danmu_speed"
            style="?android:attr/horizontalSpacing"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/danmu_aphla"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/sb_danmu_aphla"
            style="?android:attr/horizontalSpacing"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100" />
    </LinearLayout>

</ScrollView>